@model Nihility.X0.Solution.Models.Account.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: url(../../Images/Background/bg-pattern-light.svg);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
</style>

<div class="account-page my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-header py-4">
                        <a href="#">
                            <img src="~/Images/Logo/Brand.png" alt="" height="25">
                        </a>
                    </div>
                    <div class="card-body p-4">
                        <header class="text-center w-75 m-auto">
                            <h4 class="card-title">Free Sign Up</h4>
                            <p class="card-subtitle">Don't have an account? Create your account, it takes less than a minute</p>
                        </header>

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(x => x.Email, new { @for = "emailaddress" })
                                @Html.TextBoxFor(x => x.Email, htmlAttributes: new { id = "emailaddress", @class = "hyper-form-control", type = "email", placeholder = "Enter your email", required = "required" })
                                <small id="emailHelpBlock" class="form-text text-muted">
                                    We'll never give out your email address
                                </small>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.UserName, htmlAttributes: new { @for = "txtUserName" })
                                @Html.TextBoxFor(x => x.UserName, htmlAttributes: new { id = "txtUserName", @class = "hyper-form-control", placeholder = "Enter your username", required = "required" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Password, htmlAttributes: new { @for = "txtPassword" })
                                @Html.PasswordFor(x => x.Password, htmlAttributes: new { id = "txtPassword", @class = "hyper-form-control", placeholder = "Enter your password", required = "required" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.ConfirmPassword, htmlAttributes: new { @for = "txtConfirmPassword" })
                                @Html.PasswordFor(x => x.ConfirmPassword, htmlAttributes: new { id = "txtConfirmPassword", @class = "hyper-form-control", required = "required" })
                            </div>

                            <div class="form-group mb-3">
                                <div class="pretty p-icon p-curve p-pulse">
                                    <input id="checkbox-signin" type="checkbox">
                                    <div class="state p-info-o">
                                        <i class="icon fas fa-check"></i>
                                        <label>I accept Terms and Conditions</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-0 text-center">
                                <button class="hyper-btn hyper-btn-primary" type="submit">Sign Up</button>
                            </div>
                        }
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have an account? <a href="@Url.Action("Login","Account",null)" class="text-muted ml-1"><b>Log In</b></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            document.querySelector("#navigation").classList.add("d-none");
            console.log("ok")
        });
    </script>
}